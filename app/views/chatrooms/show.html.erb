<%= render 'shared/navbar' %>

<div class="container mt-3 chatroom">
  <%= link_to "Back", :back, class:'text-decoration-none' %>
  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.username %></strong>
          <i><%= message.created_at.strftime("%l:%M %p") %></i>
        </small>
        <br>
        <div class="d-flex align-items-center mb-3">
          <%= cl_image_tag message.user.photo.key, class:'img-avatar-message' %>
          <p class="message-content flex-grow-1"><%= message.content %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="sending-message">
    <%= simple_form_for [@chatroom, @message],
      remote: true,
      html: {class: "d-flex"} do |f|
    %>
      <%= f.input :content,
        label: false,
        placeholder: "Message...",
        wrapper_html: {class: "flex-grow-1"}
      %>
      <%= f.submit "Send", class: "btn btn-primary btn-message-send" %>
    <% end %>
  </div>
</div>
