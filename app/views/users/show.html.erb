<%= render 'shared/navbar' %>

<div class="banner-show">
  <% if @user.photos.attached?  %>
    <%= cl_image_tag @user.photos.first.key %>
  <% else %>
    <img src="https://images.unsplash.com/photo-1499424017184-418f6808abf9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="">
  <% end %>
  <div class="back-to-index">
    <%= link_to users_path(@user) do %>
      <i class="fa fa-arrow-left index"></i>
    <% end %>
  </div>
</div>

<div class="container mt-3 mb-3">
  <div class="user-info">
    <h2> <strong style="font-family: lobster"><%= @user.username %></h2></strong>
    <p id="body-text" style='margin-top: 10px; '> <i style="margin-right: 2px" class="fa fa-map-pin" id="pin"></i> <%= @user.location %></p>
    <p id="body-text"><strong >Instruments: </strong><%= @user.instruments.join(', ') %></p>
    <p id="body-text"><strong>Genres: </strong><%= @user.genres.join(', ') %></p>
    <p id="body-text"><%= @user.bio %></p>
    <br>
    <div class="d-flex justify-content-center">
      <% if @chatroom.present? %>
        <%= link_to 'Send a message', chatroom_path(@chatroom), class:'btn btn-primary btn-sendmessage'  %>
      <% elsif @user != current_user %>
        <%= link_to 'Send a message', user_chatrooms_path(@user), method: :post, class:'btn btn-primary btn-sendmessage'  %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
